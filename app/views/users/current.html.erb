<main>

  <h2>Current User: <%= link_to @current_user.username, user_path(@current_user.id) %> </h2>
  <p>Joined site  <%= @current_user.created_at.strftime("%b %d, %Y") %> </p>

  <section class="user-votes__container">
    <h3 class="user-votes__header">Votes</h3>
    <table class="table">
      <thead>
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
      </tr>
      </thead>
      <tbody>
      <% @current_user.votes.all.each do |vote|%>
        <% work = Work.find_by(id: vote.work_id) %>
        <tr>
          <td> <%= link_to work.title, work_path(work.id) %> </td>
          <td> <%= work.creator %> </td>
          <td> <%= work.publication_year %> </td>
          <td> <%= work.category %> </td>
          <td> <%= vote.created_at.strftime("%b %d, %Y") %> </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </section>

  <%= link_to 'See All Users', users_path, class: "btn btn-secondary" %>
  <%= link_to 'Back to Media List', root_path, class: "btn btn-primary" %>

</main>