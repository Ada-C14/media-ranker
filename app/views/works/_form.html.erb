<main>
  <section>
    <%= form_with model: @work do |f| %>
      <div class="form-group">
        <%= f.select :category, categories.map{|category| category},{}, {class: "form-control"} %>
      </div>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :creator %>
        <%= f.text_field :creator, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :publication_date %>
        <%= f.text_field :publication_date, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "#{action_name} Work", class: "btn btn-primary" %>
      </div>
    <% end %>
  </section>
</main>
