 <section class="media-table">
   <h4><%= category.capitalize %>s</h4>
   <table class="table">
      <thead>
      <tr>
        <th width="80">Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th width="100">Published</th>
        <th width="100">Upvote</th>
      </tr>
      </thead>

      <tbody>
      <% works = Work.sorted(category) %>
      <% works.each do |work| %>
        <tr>
          <td><%= work.votes.count %></td>
          <td><%= link_to work.title, work_path(work) %></td>
          <td><%= work.creator %></td>
          <td><%= work.publication_year %></td>
          <td><button class="btn btn-primary"><%= link_to "Upvote", upvote_work_path(work), method: :post %></button></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </section>
