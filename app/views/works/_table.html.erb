<section>
    <h3>All <%=header%></h3>
    <table id="index-table">
      <tr>
        <th>Title</th>
        <th>Vote Count</th>
        <th>Creator</th>
        <th>Publication Year</th>
        <th>Description</th>
      </tr>
      <% works.each do |work| %>
        <tr>
          <td><%= link_to "#{work.title}", work_path(work.id)%></td>
          <td><%= work.votes_count %></td>
          <td><%= work.creator %></td>
          <td><%= work.publication_year %></td>
          <td><%= work.description %></td>
        </tr>
      <%end %>
    </table>
</section>