<h2> Add a new work </h2>

<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<section>
  <%= form_with model: @work, class: 'create-work' do |f| %>
    <div>
    <%= f.label :category %>
    <%= f.select :category, [["book","book"], ["album", "album"], ["movie", "movie"]]%>
    </div>

    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :creator %>
      <%= f.text_field :creator %>
    </div>

    <div>
      <%= f.label :publication_year %>
      <%= f.text_field :publication_date %>
    </div>

    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

    <%= f.submit "Create work", class: "work-button" %>
  <% end %>
</section>