<h2>List of Works</h2>
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<h4> Albums</h4> <% @albums.each do |album| %>
<section class="media-table">
  <table class="table">
    <thead>
      <th width="80">Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Upvote</th>
    </thead>
    <tbody>
      <td></td>
      <td><a href="/works"><%= album[:title] %></a></td>
      <td><%= album[:creator]%></td>
      <td> <td><%= album[:publication_year]%></td></td>
      <td><a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/">Upvote</a></td>
    </tbody>
  </table>
</section>
<% end %>

<h4>Books</h4> <% @books.each do |book| %>
<section class="media-table">
  <table class="table">
    <thead>
        <th width="80">Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th width="100">Published</th>
        <th width="100">Upvote</th>
    </thead>
    <tbody>
        <td></td>
        <td><a href="/works"><%= book[:title] %></a></td>
        <td><%= book[:creator]%></td>
        <td> <td><%= book[:publication_year]%></td></td>
        <td><a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/">Upvote</a></td>
    </tbody>
  </table>
</section>
<% end %>

<h4>Movies</h4><% @movies.each do |movie| %>
<section class="media-table">
      <table class="table">
        <thead>
          <th width="80">Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width="100">Published</th>
          <th width="100">Upvote</th>
        </thead>
        <tbody>
          <td></td>
          <td><a href="/works"><%= movie[:title] %></a></td>
          <td><%= movie[:creator]%></td>
          <td> <td><%= movie[:publication_year]%></td></td>
          <td><a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/">Upvote</a></td>
        </tbody>
      </table>
</section>
<% end %>
<a class="btn btn-secondary" href="/">View top media</a>
<a class="btn btn-primary" href="/works/new">Add a new work</a>
