<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<h2>Edit This <%= @work.category %></h2>

<%= render partial: "form", locals: { action_name: "Edit Media"} %>