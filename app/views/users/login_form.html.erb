<main>
  <h2>Log In</h2>
  <section>
    <%= form_with model: @user, class: 'login__form', url: login_path do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Log In", class: "btn btn-primary" %>
      </div>
    <% end %>
  </section>
</main>