<main>
  <section>
    <h2> <%= @work.title %> </h2>
    <p>Created by: <%= @work.creator %></p>
    <p>Published:<%= @work.publication_year %> </p>
    <p><%= @work.description%></p>
    <section>
      <button class="btn btn-primary"><%= link_to "Back to media ranks", root_path %></button>
      <button class="btn btn-primary"><%= link_to "Edit", edit_work_path(@work.id)%></button>
      <button class="btn btn-primary"><%= link_to "Upvote" %></button>
      <button class="btn btn-primary"><%= link_to "Delete", work_path(@work.id), method: :delete, data: { confirm: "Are you sure?" } %></button>
    </section>
  </section>
  <section class="votes">
    <h3 class="votes-header">NUM Votes for this <%= @work.category %></h3>
    <table>
      <thead>
      <th>User</th>
      <th>Date</th>
      </thead>
      <tbody>
      <tr>
        <!--          SOME LOOP HERE TO GET ALL VOTES-->
        <td>LINK TO USER</td>
        <td>VOTE DATE</td>
      </tr>
      <tr></tr>
      </tbody>
    </table>
  </section>
</main>