<h2>The main page!</h2>
<section>
  <h2>
  <span>Media Spotlight:</span> <%= link_to @spotlight.title, work_path(@spotlight.id) %> by <%=@spotlight.creator %>
  </h2>
</section>
<p><%=@spotlight.description %></p>

<section>
    <section>
    <h2>Top movies</h2>
      <% @top_movies.each do |movie| %>
      <ul>
        <li><%= link_to movie.title, work_path(movie.id) %> by <%= movie.creator%> </br> Votes: <%=rand(50)%></li>
      </ul>
      <% end %>
    </section>

    <section>
    <h2>Top books</h2>
      <% @top_books.each do |book| %>
        <ul>
          <li><%= link_to book.title, work_path(book.id) %> by <%= book.creator%> </br> Votes: <%=rand(50)%></li>
        </ul>
      <% end %>
    </section>

    <section>
    <h2>Top albums</h2>
      <% @top_albums.each do |album| %>
        <ul>
          <li><%= link_to album.title, work_path(album.id) %> by <%= album.creator%> </br> Votes: <%=rand(50)%></li>
        </ul>
      <% end %>
    </section>
</section>

