<h2>User Summary: <%= link_to "#{@user.username}", user_path(@user) %></h2>
<p>Joined site <%= @user.created_at %></p>
<section class="user-votes__container">
  <h3 class="user-votes__header">Votes</h3>
  <table class="table">
    <thead>
    <tr>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
    </tr>
    </thead>
    <tbody>
    <% if @user.votes %>
      <% @user.votes.each do |vote| %>
      <tr>
        <td><%= link_to vote.work.title, work_path(vote) %></td>
        <td><%= vote.work.creator %></td>
        <td><%= vote.work.publication_year %></td>
        <td><%= vote.created_at %></td>
      </tr>
      <% end %>
      <% else %>
      <tr>
        <h3><%= "#{@user.username} has not voted for any media ðŸ‘¾" %></h3>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>