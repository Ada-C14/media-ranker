<h2><%= @work.title %></h2>
<p>Created by: <%= @work.creator %></p>
<p>Published: <%= @work.publication_year %></p>
<p><%= @work.description %></p>


<ul>
  <li><%= link_to "Back to Media ranks", root_path, class: "btn btn-primary" %></li>
  <li><%= link_to "Edit", edit_work_path, class: "btn btn-primary" %></li>
  <li><%= link_to "Upvote", work_votes_path(@work.id), class: "btn btn-primary" %></li>
  <li><%= link_to "Delete", work_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary"%></li>
</ul>



