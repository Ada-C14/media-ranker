<%#index.html.erb%>

<h2>List of Works</h2>

<section class="media-table">
  <h4>Albums</h4>
  <table class="table">
    <thead>
    <tr>
      <th width="80">Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th width="100">Published</th>
      <th width="100">Upvote</th>
    </tr>
    </thead>

    <tbody>
    <% @works.find_by(category: "albums").each do |album|%>
      <tr>
        <td> <%= album.votes %> </td>
        <td><%= link_to album.title, work_path(album) %></td>
        <td><% album.author %>></td>
        <td><% album.publish_date %></td>
        <td>Upvote</td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>

