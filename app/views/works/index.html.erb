<main>
  <h2>List of Works</h2>
  <%# albums = @works.select {|work| work.category == 'album'} %>
  <%# books = @works.select {|work| work.category == 'book'} %>
  <%# movies = @works.select {|work| work.category == 'movie'} %>
  <section class="media-table">
    <h4>Albums</h4>
    <table class="table">
      <thead>
        <tr>
          <th>Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th>Published</th>
          <th>Upvote</th>
        </tr>
      </thead>
      <tbody>
      <% @works_album.each do|work| %>
        <tr>
          <td>
          </td>
          <td> <%= link_to work.title, work_path(work.id) %>
          </td>
          <td>
            <%= work.creator%>
          </td>
          <td>
            <%= work.publication_year%>
          </td>
          <td></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </section>
