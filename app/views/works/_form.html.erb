<%= form_with model: @work do |f| %>
  <div>
    <%= f.label :category %>
    <%= f.text_field :category %>
  </div>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :creator %>
    <%= f.text_field :creator %>
  </div>
  <div>
    <%= f.label :publication_year %>
    <%= f.text_field :publication_year %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.submit action_name %>
  </div>
<% end %>