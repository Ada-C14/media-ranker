<% if @work.errors.any? %>
  <ul class="errors">
    <p> A problem occurred: Could not create <%= @work.category %> </p>
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @work, class: 'work-form' do |f| %>

  <p><%= f.label :category %>
    <%= f.select :category, options_for_select(Work.all.map(&:category).uniq) %>
  </p>

  <p><%= f.label :title %>
    <%= f.text_field :title %></p>

  <p><%= f.label :creator %>
    <%= f.text_field :creator %></p>

  <p><%= f.label :publication_year %>
    <%= f.text_field :publication_year %></p>

  <p><%= f.label :description %>
    <%= f.text_area :description %></p>


  <p> <%= f.submit action_name, class: 'btn btn-primary' %></p>
<% end %>