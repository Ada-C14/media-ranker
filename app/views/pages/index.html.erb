<p>Media Spotlight: <%= Work.select_spotlight.title %> By: <%= Work.select_spotlight.creator %></p>
<%= Work.select_spotlight.description %>

<ul>
  <% if Work.count > 0 %>
    <h2>Top Books</h2>
    <% Work.top_ten('book').each do |book| %>
      <li><%= link_to book.title, work_path(book) %> By: <%= book.creator %></li>
    <% end %>
    <br>
    <h2>Top Albums</h2>
    <% Work.top_ten('album').each do |album| %>
      <li><%= link_to album.title, work_path(album) %> By: <%= album.creator %></li>
    <% end %>
    <br>
    <h2>Top Movies</h2>
    <% Work.top_ten('movie').each do |movie| %>
      <li><%= link_to movie.title, work_path(movie) %> By: <%= movie.creator %></li>
    <% end %>
  <% else %>
    No works
  <% end %>
</ul>



