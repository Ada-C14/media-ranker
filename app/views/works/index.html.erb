          <td> <%= work.creator %> </td>
          <td> <%= work.publication_year %> </td>
<!--          <td> <%#= link_to "Upvote", class: "btn btn-primary" %> </td>-->
<!--          Insert path for Upvote when creating this functionality-->
        </tr>
        <% end %>
