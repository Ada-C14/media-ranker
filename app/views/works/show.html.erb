<h1><%= @work.title %></h1>

<p>Created by: <%= @work.creator %></p>
<p>Published: <%= @work.publication_year %></p>
<p><%= @work.description %></p>

<%= link_to "Back to media ranks", root_path %>
<%= link_to "Edit", edit_work_path(@work) %>
<%= button_to "Upvote", { action: "upvote", :controller => "works" }, method: :post %>
<%= link_to "Delete", work_path(@work), method: :delete %>

<h4><%= @work.votes_count %> Votes for this <%= @work.category %></h4>

<table>
  <tr>
    <th>User</th>
    <th>Date</th>
  </tr>

  <% @work.votes.each do |vote| %>
    <tr>
      <td><%= vote.user.username %></td>
      <td><%= vote.created_at.strftime("%b %d, %Y") %></td>
    </tr>
  <% end %>
</table>