

<!--<section class="media-table">-->

  <table class="table">
    <thead>
    <tr>
      <th width="80">Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th width="100">Published</th>
      <th width="100">Upvote</th>
    </tr>
    </thead>

    <tbody>
    <% category.each do |work| %>
      <tr>
        <td><%= work.votes.count %></td>
        <td><%= link_to work.title, work_path(work.id) %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_date %></td>
        <td class="button button-primary"><%= button_to 'Upvote', work_votes_path(work.id) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
