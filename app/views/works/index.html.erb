<h1>List of Works</h1>

<h3>Albums</h3>
<table>
  <tr>
    <th>Title</th>
    <th>Creator</th>
    <th>Published</th>
  </tr>

  <% @albums.each do |work| %>
    <tr>
      <td><%= link_to work.title, work_path(work) %></td>
      <td><%= work.creator %></td>
      <td><%= work.publication_year %></td>
    </tr>
  <% end %>
</table>

