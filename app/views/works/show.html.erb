
  <section>
    <h2><%= @work.title %></h2>
    <p>Created by: <%= @work.creator %></p>
    <p>Published: <%= @work.publication_date %></p>
    <p><%= @work.description %></p>
  </section>

  <section>
    <%= button_to 'Back to media ranks', root_path, method: :get, class: 'button button-primary' %>
    <%= button_to 'Edit', edit_work_path(@work.id), method: :get, class: 'button button-primary'  %>
    <%= button_to 'Upvote', work_votes_path(@work.id), method: :post, class: 'button button-primary'  %>
    <%= button_to 'Delete', work_path(@work.id), method: :delete, data: {confirm: "Are you sure?"}, class: 'button button-danger'  %>
  </section>

  <section class="works-votes-container">
    <h3 class="works-votes-header"><%= @work.votes.count %> Votes for this <%= @work.category.capitalize %> </h3>
    <table>
      <thead>
      <tr>
        <th>
          User
        </th>
        <th>Date</th>
      </tr>
      </thead>
      <tbody>
      <% @votes.each do |vote| %>
        <tr>
          <td><%= link_to vote.user.name, user_path(vote.user.id) %></td>
          <td><%= vote.created_at.strftime("%b %d, %Y") %></td>
        </tr>
      <% end %>

      </tbody>
    </table>

  </section>


