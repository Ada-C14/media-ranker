<%= form_with model: @work do |f| %>
  <p><%= header_sentence %></p>

  <%= f.label :category %>
  <%# SHOULD THESE BE HARD CODED???%>
  <%= f.select :category, ['book', 'movie', 'album'] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "#{action_name} Work" %>

<% end %>