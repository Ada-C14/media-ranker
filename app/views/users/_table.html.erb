<section class="media-table">
  <h4><%= category.capitalize %></h4>
  <% if works.nil? || works.length.zero? %>
    <p>No <%= category %> in the system.</p>

  <% else %>
    <table class="table">
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th width="100">Published</th>
        <th width="100">Category</th>
        <th width="80">Voted on</th>
      </tr>

      <% works.each do |work| %>
          <tr>
            <td><%= link_to work.title, work_path(work) %></td>
            <td><%= work.creator %></td>
            <td><%= work.publication_year %></td>
            <td><%= work.category %></td>
            <td><%= button_to "Upvote", method: :post, :class => "btn btn-primary" %></td>
          </tr>
      <% end %>
    </table>
  <% end %>
</section>