<h2>List of Works</h2>
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<section class="media-table">
  <h4> Albums</h4>
  <table class="table">
    <thead>
      <tr>
        <th width="80">Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
      </tr>
    </thead>
    <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td></td>
        <td><%= link_to album.title, work_path(album.id)%></td>
        <td><%= album.creator%></td>
        <td><%= album.publication_year%></td>
        <td><a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/">Upvote</a></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>

<section class="media-table">
  <h4>Books</h4>
