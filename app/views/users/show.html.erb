<main>

  <h2>User Summary: <%= link_to @user.name, user_path(@user.id) %></h2>
  <p>Joined site <%= @user.format_created_at_time %></p>

  <section class="user-votes-container">
    <h3 class="user-votes-header">Votes</h3>
    <table class="table">
      <thead>
        <tr>
          <th>Media Title</th>
          <th>Created By</th>
          <th>Published</th>
          <th>Category</th>
          <th>Voted On</th>
        </tr>
      </thead>
      <tbody>
        <% if @user.works.length > 0 %>
          <% @user.works.each do |work| %>
            <tr>
              <td><%= link_to work.title, work_path(work.id) %></td>
              <td><%= work.title %></td>
              <td><%= work.publication_year %></td>
              <td><%= work.category.capitalize %></td>
              <td><%= work.votes[0].format_created_at_time %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>

    </table>

  </section>

  <%= button_to "See all Users", users_path, method: :get %>
  <%= button_to "Back to Media List", root_path, method: :get %>

</main>