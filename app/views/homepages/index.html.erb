<% spotlight_work = Work.spotlight %>

<h2>Media Spotlight:
  <% if spotlight_work.nil? %>
    <%= link_to "Add new works and upvote them!", new_work_path %>
  <% else %>
    <%= link_to spotlight_work.title, work_path(spotlight_work) + "by" + spotlight_work.creator %>
  <% end %>
</h2>
<p><%= spotlight_work.description unless spotlight_work.nil? %></p>

<% top_works = Work.top_ten %>
<h3>Top Albums</h3>
<% top_works[:albums].each do |album| %>
  <%= link_to album.title, work_path(album) %>
  <br/>
<% end %>

<h3>Top Books</h3>
<% top_works[:books].each do |book| %>
  <%= link_to book.title, work_path(book) %>
  <br/>
<% end %>

<h3>Top Movies</h3>
<% top_works[:movies].each do |movie| %>
  <%= link_to movie.title, work_path(movie) %>
  <br/>
<% end %>
