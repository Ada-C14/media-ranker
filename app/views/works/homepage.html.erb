<h3> Top Books </h3>
<% if @books.count == 0 %>
  <p> No books to show </p>
<% end %>
<ol class="work-list">
  <% @books.sample(10).each do |work| %>
      <li><b><%= work.title.upcase %></b> - <%= work.category %> - <%= work.creator %> - <%= work.publication_year %></li>
  <% end %>
</ol>

