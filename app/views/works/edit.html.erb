<%# in app/views/edit.html.erb %>
<div>
  <% if @work.errors.any? %>
    <ul class="errors">
      <% @work.errors.each do |column, message| %>
        <li>
          <strong><%= column.capitalize %></strong> <%= message %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>

<h2>Edit This Album</h2>

<%= render partial: "form", locals: { action_name: "Edit" } %>