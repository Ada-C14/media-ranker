 <ul class="list-group top-ten__list">

    <% works.each do |work|%>
      <li class="list-group-item">
        <h4>
          <%= link_to "#{work.title}", work_path(work.id), method: :get%>
          <small class="top-ten__creator">by <%=work.creator%></small>
        </h4>
        <p><%= work.votes.count %></p>
      </li>
    <% end %>
  </ul>
