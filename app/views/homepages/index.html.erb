<h2>Media Spotlight: <%= Work.spotlight.title %> by <%= Work.spotlight.creator %></h2>
<p><%= rand(1..50) %> votes - <%= Work.spotlight.description %></p>

<section>
  <h2>Top Movies</h2>
  <% @top_ten_movies = Work.top_ten("movie") %>
  <% if @top_ten_movies.empty? %>
    <p>No top ten for this category</p>
  <% end %>

  <ul>
    <% @top_ten_movies.each do |movie| %>
      <li>
        <h4>
          <%= link_to movie.title, work_path(movie) %>
          <small><%= "By: #{movie.creator}" %></small>
        </h4>
        <p><%= "#{rand(0..30)} votes" %></p>
      </li>
    <% end %>
  </ul>

  <h2>Top Books</h2>
