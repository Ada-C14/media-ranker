<main>
  <h2> List of Works <h2>

  <section class="media-table">
    <h4> Albums </h4>
    <table class="table">
    <thead>
        <tr>
          <th>Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th>Published</th>
          <th>Upvote</th>
        </tr>
      </thead>
      <tbody>
        <% if @albums %>
          <% @albums.each do |album| %>
            <tr>
              <%#will have votes here%>
              <td><%= link_to "#{album.title}", work_path(album.id)%></td>
              <td><%= album.creator %></td>
              <td><%= album.publication_year %></td>
            </tr>
            <%#will have upvote button here%>
            <% end %>
      <% end %>
      </tbody>
    </table>
  <section class="media-table">

  <section class="media-table">
    <h4> Books </h4>
    <table class="table">
    <thead>
        <tr>
          <th>Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th>Published</th>
          <th>Upvote</th>
        </tr>
      </thead>
      <tbody>
        <% if @books %>
          <% @books.each do |book| %>
            <tr>
              <%#will have votes here%>
              <td><%= link_to "#{book.title}", work_path(book.id)%></td>
              <td><%= book.creator %></td>
              <td><%= book.publication_year %></td>
            </tr>
            <%#will have upvote button here%>
            <% end %>
      <% end %>
      </tbody>
    </table>
  <section class="media-table">

    <section class="media-table">
      <h4> Movies </h4>
      <table class="table">
      <thead>
          <tr>
            <th>Votes</th>
            <th>Title</th>
            <th>Created By</th>
            <th>Published</th>
            <th>Upvote</th>
          </tr>
        </thead>
        <tbody>
          <% if @movies %>
            <% @movies.each do |movie| %>
              <tr>
                <%#will have votes here%>
                <td><%= link_to "#{movie.title}", work_path(movie.id)%></td>
                <td><%= movie.creator %></td>
                <td><%= movie.publication_year %></td>
              </tr>
              <%#will have upvote button here%>
              <% end %>
        <% end %>
        </tbody>
      </table>
    <section class="media-table">

    <%= button_to "View top media", root_path, method: :get %>
    <%= button_to "Add a new work", new_work_path, method: :get %>

  </main>
  
    