<h1> Works List</h1>
<h2> Books </h2>
<main>
<table>
  <tr class="border-bottom">
    <th>Votes</th>
    <th>Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Upvote</th>
  </tr>
  <% @works.each do |work| %>
    <% if work.category == "book" %>
      <tr class="border-bottom">
        <td><%= pluralize(work.votes.count, "vote") %></td>
        <td> <%= link_to work.title, work_path(work)  %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_date %></td>
        <td><%= button_to '+1', upvote_work_path(work), method: :post %></td>
    <%end %>
  <% end %>
  </tr>
</table>

