
  <div class="row">
    <div class="col-sm-12">
      <section class="spotlight">
        <h2 class="spotlight__header">
          <span class="spotlight__header--prefix">Media Spotlight: <%= link_to Work.first.title, work_path(1) %> by <%= Work.first.creator %></span>
        </h2>
        <p class="spotlight__description">
          4 votes - <%= Work.first.description %>
        </p>
      </section>
    </div>
  </div>


    <div class="row">
      <div class="col-sm-12 col-md-4">
        <h2>Top Movies </h2>
        <% @work = Work.all %>
        <% @movies = @work.where(category: "movie") %>
        <ol>
          <% @movies.each do |movie|  %>
            <li><%= link_to movie.title, work_path(movie.id)  %></li>
          <% end %>
        </ol>
      </div>
      <div class="col-sm-12 col-md-4">
        <h2>Top Books</h2>
      </div>
      <div class="col-sm-12 col-md-4">
        <h2>Top Albums</h2>
      </div>
    </div>





