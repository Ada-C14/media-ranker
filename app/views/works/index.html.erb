

<h2>List of Works</h2>
<section class="media-table">
  <h4>Albums</h4>
  <table class="table">

    <thead>
    <tr>
      <th width="80">Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th width="100">Published</th>
      <th width="100">Upvote</th>
    </tr>
    </thead>

    <tbody>
    <% @albums.each do |work| %>
      <tr>
        <td><%= work.votes.count %></td>
        <td><%= link_to work.title, work_path(work.id) %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_date %></td>
        <td class="button button-primary"><%= button_to 'Upvote', votes_path %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>
