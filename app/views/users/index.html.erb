<h2>List of Users</h2>
<section class="media-table">
  <% if @users.empty? %>
    <p>No Users Available</p>
  <% else %>
    <table class="table">
      <thead>
      <tr>
        <th>Username</th>
        <th>Votes</th>
        <th>Joined</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to "#{user.username}", user_path(user) %></td>
          <td><%= user.votes.count%></td>
          <td><%= user.format_date %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>
</section>