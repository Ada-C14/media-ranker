<main>
  <h2>List of Works</h2>
  <%# albums = @works.select {|work| work.category == 'album'} %>
  <%# books = @works.select {|work| work.category == 'book'} %>
  <%# movies = @works.select {|work| work.category == 'movie'} %>
  <section class="media-table">
    <h4>Albums</h4>
    <table class="table">
      <thead>
        <tr>
          <th>title</th>
        </tr>
      </thead>
      <tbody>
      <% @works_album.each do|work| %>
        <tr>
        <td> <%= link_to work.title, work_path(work.id) %></td>

        </tr>
      <% end %>
      </tbody>
    </table>
  </section>
  <section class="media-table">
    <h4>Books</h4>
    <table class="table">
      <thead>
      <tr>
        <th>title</th>
      </tr>
      </thead>
      <tbody>
      <% @works_book.each do|work| %>
        <tr>
          <td> <%= link_to work.title, work_path(work.id) %></td>

        </tr>
      <% end %>
      </tbody>
    </table>
  </section>
  <section class="media-table">
    <h4>Movies</h4>
    <table class="table">
      <thead>
      <tr>
        <th>title</th>
      </tr>
      </thead>
      <tbody>
      <% @works_movie.each do|work| %>
        <tr>
          <td> <%= link_to work.title, work_path(work.id) %></td>

        </tr>
      <% end %>
      </tbody>
    </table>
  </section>
</main>