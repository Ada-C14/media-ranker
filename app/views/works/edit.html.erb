<h2>Edit This <%= @work.category.capitalize %></h2>
<%= form_with model: @work, class: 'create-work' do |f|%>
  <%= f.label :category %>
  <%= f.select :category, %w[album book movie] %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :creator %>
  <%= f.text_field :creator %>
  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.submit "Update Work", class: "work-button" %>
<% end %>