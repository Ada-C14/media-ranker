<h2>List of Works</h2>

<p>
  <% categories = ["book", "album", "movie"] %>

  <% categories.each do |type| %>
  <h3> <%= type %> </h3>

  <ul class="work-list">
    <% @works.each do |work| %>
      <% if work.category == type %>
        <li><b><%= work.title.upcase %></b> - <%= work.category %> - <%= work.creator %> - <%= work.publication_year %></li>
      <% end %>
    <% end %>
  </ul>
<% end %>