<main>
  <section>
    <h2><%= @work.title %></h2>
    <p>Created by: <%= @work.creator %></p>
    <p>Published: <%= @work.publication_year %></p>
    <p><%= @work.description %></p>
    <section>
      <%= link_to "Back to media ranks", root_path, method: :get, class: "btn btn-primary"%>
      <%= link_to "Edit", edit_work_path(@work.id), method: :get, class: "btn btn-primary"%>
      <%= link_to "Upvote", upvote_path(@work.id), method: :post, class: "btn btn-primary"%>
      <%= link_to "Delete", work_path(@work.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger"%>
    </section>
  </section>

  <section class="works-votes__container">
    <h3 class="works-votes__header"><%= @work.votes.count %> Votes for this <%= @work.category.capitalize %></h3>
    <table class="table">
      <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
      </thead>
      <tbody>
      <% @work.users.each do |user| %>
        <td><%= link_to "#{user.username}", user_path(user.id), method: :get%></td>
        <td><%= @work.votes.find_by(user_id: user.id).created_at.strftime("%b %d, %Y") %></td>
      <% end %>
      </tbody>
      </table>
  </section>

</main>


