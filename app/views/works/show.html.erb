<h1><%= @work.title %></h1>
<ul>
    <li>Category: <%= @work.category %></li>
    <li>Creator: <%= @work.creator %></li>
    <li>Year Published: <%= @work.publication_year %></li>
    <li>Description: <%= @work.description %></li>
</ul>

<%= link_to "Edit", edit_work_path(@work) %>
<%= link_to "Delete", work_path(@work), method: :delete, data: {confirm: "Are you sure you want to delete this media entry?"} %>