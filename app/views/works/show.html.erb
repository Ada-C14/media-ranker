<section>
  <h2><%= @work.title %></h2>
  <p>Created by: <%= @work.creator %></p>
  <p>Published: <%= @work.publication_year %>
  <p><%= @work.description %></p>
  <section>
    <%= link_to "Back to Media Ranks", root_path, class: "btn btn-primary" %>
    <%= link_to "Edit", edit_work_path(@work), class: "btn btn-primary" %>
    <%= link_to "Upvote", work_upvote_path(@work), class: "btn btn-primary", method: :post %>
    <%= link_to "Delete", work_path(@work), data: {confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
  </section>
</section>
<section>
  <h3><%= @work.single_or_plural_votes %> for this <%= @work.category %></h3>
  <section class="media-table">
      <table class="table">
        <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
        </tr>
        </thead>
        <tbody>
        <% @work.votes.each do |vote| %>
          <tr>
            <td><%= link_to "#{vote.user.username}", user_path(vote.user) %></td>
            <td><%= vote.format_date %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
  </section>
</section>