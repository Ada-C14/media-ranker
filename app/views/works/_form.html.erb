<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %> <%= message %></strong>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @work do |f| %>

    <p><%= f.label :category %></p>
    <p><%= f.text_area :category %></p>

    <p><%= f.label :title %></p>
    <p><%= f.text_field :title %></p>

    <p><%= f.label :creator %></p>
    <p><%= f.text_area :creator %></p>

    <p><%= f.label :publication_year %></p>
    <p><%= f.text_field :publication_year %></p>

    <p><%= f.label :description %></p>
    <p><%= f.text_area :description %></p>


  <%= f.submit "#{action_name} Work", class: "works-button" %>
<% end %>