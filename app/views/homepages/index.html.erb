
<% if @spotlight %>
  <section class="spotlight">
    <h2 class="spotlight__header">
      <span class="spotlight__header--prefix">Media Spotlight</span>
      <%= link_to "#{@spotlight.title}", work_path(@spotlight), class: "spotlight__link-to" %>
      by <%= @spotlight.creator %>
    </h2>
    <p class="spotlight__description"><%= @spotlight.single_or_plural_votes %> - <%= @spotlight.description %></p>
  </section>
<% end %>

<hr class="root__hr">

<section class="top-ten__container">
    <%= render partial: "list", locals: { action_name: "album" } %>
    <%= render partial: "list", locals: { action_name: "book" } %>
    <%= render partial: "list", locals: { action_name: "movie" } %>
</section>