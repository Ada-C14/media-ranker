<h2> List of all works page </h2>
<h2> List of all works by category </h2>

<section>
  <h4>Albums</h4>
<table id='albums-table' class="table table-hover">
  <thead class="thead-light">
  <tr>
    <th>Votes</th>
    <th>Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Upvote</th>
  </tr>
  </thead>

  <tbody>
  <% @works.each do |work| %>
    <tr>
      <td><%= work.id %></td>
      <td><%= link_to work.title, work_path(work.id)%></td>
      <td><%= work.creator %></td>
      <td><%= work.publication_date %></td>
      <td><button type="button">Upvote</button></td>

<!--      <td><%#=trip.passenger ? trip.passenger.name : "N/A"%></td>-->
