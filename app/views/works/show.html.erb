<main>
<h2><%= @work.title %></h2>
<p>Created by:  <%= @work.creator %></p>
<p>Published: <%= @work.publication_year %></p>
<p>Description: <%= @work.description %></p>

  <section>
    <%= link_to "Back to media ranks", root_path, class: "btn btn-primary" %>
    <%= link_to "Edit", edit_work_path(@work), class: "btn btn-primary" %>
    <%= link_to "Upvote", work_votes_path(@work), method: :post, class: "btn btn-primary" %>
    <%= link_to "Delete", work_path(@work), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"}%>
  </section>

  <section class="works-votes__container">
    <h3 class="works-votes__header"> <%= @work.votes.count %> Votes for this <%= @work.category.capitalize %></h3>

    <table class="table">
      <thead>
      <tr>
        <th width = 50%>User</th>
        <th width = 50%>Date</th>
      </tr>
      </thead>
      <tbody>
        <% @work.votes.each do |vote| %>
        <tr>
          <td> <%= link_to vote.user.username, user_path(vote.user.id) %> </td>
          <td> <%= vote.created_at.strftime("%b %d, %Y") %> </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </section>
</main>