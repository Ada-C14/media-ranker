<%# <h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p> %>

<main>
    <h2> List of Users </h2>
    <table class= "userlist">
        <thead>
            <tr>
                <th>Name</th>
                <th>Votes</th>
                <th>Member Since</th>
            </tr>
        </thead>

        <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= link_to user.name, user_path(user.id) %></td>
                    <td><%= link_to user.votes.count %></td>
                    <td><%= link_to user.created_at.strftime("%b %d, %Y") %> </td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <br>
    <a class="btn btn-secondary" href="/">Back to Media List</a>
</main>
