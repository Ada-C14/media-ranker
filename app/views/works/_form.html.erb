<%= form_with model: @work, class: 'form-group' do |f| %>
  <%= f.label :category %>
  <%= f.select :category, %w[album book movie] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_area :description%>

  <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>