<h2>List of Works</h2>
<% @works_hash.each_key do |category| %>
<section class="media-table">
  <% if @works_hash[category].empty? %>
    <h2>There are no entries for the <%= category.capitalize %> category!</h2>
  <% else %>
  <h4><%= category.capitalize %></h4>
  <table class="table">
    <thead>
    <tr>
      <th>Title</th>
      <th>Created By</th>
      <th width="100">Published</th>
    </tr>
    </thead>
    <tbody>
      <% @works_hash[category].each do |work| %>
      <tr>
        <td><%= link_to work.title, work_path(work) %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
</section>

<% end %>

