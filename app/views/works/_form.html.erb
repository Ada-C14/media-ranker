<section>
  <%= form_with model: @work do |f|  %>
    <div class="form-group">
      <label>Category</label>
      <select class="form-control" name="work[category]">
        <option value="album">album</option>
        <option value="book">book</option>
        <option value="movie">movie</option></select>
    </div>

    <div class="form-group">
      <label>Title</label>
      <input class="form-control" type="text" name="work[title]">
    </div>

    <div class="form-group">
      <label>Creator</label>
      <input class="form-control" type="text" name="work[creator]">
    </div>

    <div class="form-group">
      <label>Publication year</label>
      <input class="form-control" type="text" name="work[publication_year]">
    </div>

    <div class="form-group">
      <label>Description</label>
      <textarea class="form-control" name="work[description]"></textarea>
    </div>

    <div class="form-group">
      <%= f.submit action_name %>
    </div>
    <% end %>
</section>
