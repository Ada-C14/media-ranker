<h2>All Media</h2>

<h3>Albums</h3>
<table class="albums-table">
  <tr>
    <th>Votes</th>
    <th>Title</th>
    <th>Creator</th>
    <th>Published</th>
    <th>Upvote</th>
  </tr>
  <% @albums.each do |album| %>
    <tr>
      <td><%= album.votes.count %></td>
      <td><%= link_to "#{album.title}", work_path(album.id) %></td>
      <td><%= album.creator %></td>
      <td><%= album.publication_year %></td>
      <td><%= button_to "Upvote", work_upvote_path(album.id) %></td>
    </tr>
  <% end %>
</table>

