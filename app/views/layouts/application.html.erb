<!DOCTYPE html>
<html>
  <head>

    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="app-header__header">
      <h1>
        <a href="/">Media Ranker</a>
        <small>Ranking the Best of Everything</small>
      </h1>
    
      <nav class="app-header__nav">
      
        <ul class="nav app-header__site-nav-container">
          <li class="nav-item app-header__nav_item">
            <%= link_to "View Top Media", root_path, class:"nav-link" %>
          </li>
          <li class="nav-item app-header__nav_item">
            <a class="nav-link" href="/works">View all media</a>
          </li>
          <li class="nav-item app-header__nav_item">
            <a class="nav-link" href="/works/new">Add a new work</a>
          </li>
          <li class="nav-item app-header__nav_item">
            <a class="nav-link" href="/users">View all users</a>
          </li>
        </ul>

        <% if session[:user_id] %>
          <ul class="nav app-header__user-nav-container">
            <li class="nav-item app-header__nav_item">
            <%= link_to "Logged in as #{session[:name]}",
                current_user_path(session[:user_id]), class: "btn btn-primary" %>
            </li>
            <li class="nav-item app-header__nav_item">
              <%= link_to "Logout", logout_path, method: :post, class: "btn btn-primary" %>
            </li>
          </ul>
        <%elsif session[:id] == nil%>
          <ul class="nav app-header__user-nav-container">
            <li class="nav-item app-header__nav_item">
              <%= link_to "Login", login_path, class: "btn btn-primary" %>
            </li>
          </ul>
        <% end %>
      </nav>
      <section class="flash-msg__section">
        <% flash.each do |name, message| %>
          <strong class="<%= name %>">
            <%= message %>
          </strong>
        <% end %>
      </section>
    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
