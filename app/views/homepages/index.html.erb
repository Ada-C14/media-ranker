<h2>Welcome - Index Page </h2>

<h3>Top 10 Albums</h3>
<table id="index-table">
  <tr>
    <th>Title</th>
    <th>Creator</th>
    <th>Publication Year</th>
    <th>Description</th>
  </tr>

  <%count = 0 %>
  <% @works.each do |work| %>
    <% if work.category == "album" && count < 10%>
      <tr>
        <td>
          <%= link_to "#{work.title}", work_path(work.id)%>
        </td>
        <td>
          <%= work.creator %>
        </td>
        <td>
          <%= work.publication_year %>
        </td>
        <td>
          <%= work.description %>
        </td>
      </tr>
      <% count += 1 %>
    <% end %>
  <%end %>
</table>

