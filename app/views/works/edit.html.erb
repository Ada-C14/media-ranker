<h2>Edit this <%= @work.category.titleize %></h2>

<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li><strong><%= column %></strong> <%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= render partial: "form", locals: { action_name: "Edit" } %>