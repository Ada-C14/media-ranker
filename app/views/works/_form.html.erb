<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li><strong><%= column %></strong> <%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @work, class: 'form' do |f| %>
  <%= f.label :category %>
  <%= f.select :category, [["album"], ["book"], ["movie"]] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit "#{action_name}", class: "button" %>
<% end %>