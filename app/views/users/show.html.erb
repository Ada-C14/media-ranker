<h2>User Summary: <%= link_to @user.username, user_path(@user) %></h2>
<!--TODO: turning created_at datetime into string-->
<p>Joined site <%= @user.created_at.strftime('%b %d, %Y') %></p>

<h3><%= "#{@user.votes.count } Votes" %></h3>

<table>
  <thead>
  <tr>
    <th>Media Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Category</th>
    <th>Voted On</th>
  </tr>
  </thead>

  <tbody>
<!--  TODO: Changed based on the votes-->
  <% @user.works.each do |work| %>
    <tr>
      <td><%= link_to work.title, work_path(work) %></td>
      <td><%= work.creator %></td>
      <td><%= work.publication_year %></td>
      <td><%=  work.category.capitalize %></td>
      <td><%=  work.date_voted_on %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "See all Users", users_path %>
<%= link_to "Back to Media List", root_path %>
