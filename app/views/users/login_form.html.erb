<% if @user.errors.any? %>
  <ul class="errors">
    <% @user.errors.each do |column, message| %>
      <li><strong><%= column %></strong> <%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user, class: 'login_form', url: login_path do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.submit "Log In" %>
<% end %>