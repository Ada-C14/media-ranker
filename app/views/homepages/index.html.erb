<main>
  <section class="spotlight">
    <h2 class="spotlight__header">
      <span class="spotlight__header--prefix">Media Spotlight</span>
<!--      <a class="spotlight__link-to" href="/works/913">-->
      <%= link_to Work.media_spotlight.title, work_path(Work.media_spotlight.id), class: "spotlight__link-to"%> by <%= Work.media_spotlight.creator %>
    </h2>
    <p class="spotlight__description">
    <p><%= Work.media_spotlight.votes.count %> Votes - <%= Work.media_spotlight.description %> </p>
    </p>
  </section>

  <hr class="root__hr" />

  <section class="top-ten__container">
    <section class="top-ten__list-container">
      <h2 class="top-ten__header">
        Top Movies
      </h2>

      <ul class="list-group top-ten__list">
        <% Work.top_ten("movie").each do |work| %>
        <li class="list-group-item">
          <h4>
              <%= link_to work.title, work_path(work.id) %>
            <small class="top-ten__creator">by <%= work.creator %></small>
          </h4>
          <p><%= work.votes_count.nil? ? "0" : work.votes_count %> Votes</p>
        <% end %>
        </li>
        </ul>
    </section>

    <section class="top-ten__list-container">
      <h2 class="top-ten__header">
        Top Books
      </h2>

      <ul class="list-group top-ten__list">
        <% Work.top_ten("book").each do |work| %>
          <li class="list-group-item">
            <h4>
              <%= link_to work.title, work_path(work.id) %>
              <small class="top-ten__creator">by <%= work.creator %></small>
            </h4>
            <p><%= work.votes_count.nil? ? "0" : work.votes_count %> Votes</p>
        <% end %>
        </li>
      </ul>
    </section>

    <section class="top-ten__list-container">
      <h2 class="top-ten__header">
        Top Albums
      </h2>

      <ul class="list-group top-ten__list">
        <% Work.top_ten("album").each do |work| %>
          <li class="list-group-item">
            <h4>
              <%= link_to work.title, work_path(work.id) %>
              <small class="top-ten__creator">by <%= work.creator %></small>
            </h4>
            <p><%= work.votes_count.nil? ? "0" : work.votes_count %> Votes</p>
        <% end %>
        </li>
      </ul>
    </section>
  </section>
</main>
