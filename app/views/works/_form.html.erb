
<% if action_name == "Edit" %>
  <h1>Edit Work - <%= @work.title %></h1>
<% else %>
  <h1>Create a New Work</h1>
<% end %>

<%= form_with model: @work, class: 'new-or-edit-work' do |f| %>

  <%= f.label :category %>
  <%= f.select :category, ["book", "album", "movie"] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "Save Work", class: 'work-button' %>
<% end %>