<section>
  <article class="work-info">
    <h2>User Summary: <%= @user.username %></h2>
    <p>Joined site <%= @user.joined %></p>
  </article>
  
  <article class="who-vote-table">
    <h2>Votes</h2>
    <table class="show-table">
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
      </tr>
      <tr>
        <th>need to figure out</th>
        <th>work.vote.each do |vote| for vote.username & vote.date....order in vote.date</th>
      </tr>  
    </table>
  </article>

  <article class="operation-button">
    <div>
      <%= button_to "See all Users", users_path, method: :get %>
    </div>  
    <div>
      <%= button_to "Back to Media List", root_path, method: :get %>
    </div>
  </article>
</section>



