<header>
  <h1>
    <%= link_to 'Media Ranker', root_path, :class => 'logo' %>
    <small>Ranking the Best of Everything</small>
  </h1>
  <nav class="navigation">
    <section class="nav-links">
      <%= link_to "View top media", homepages_path, :class => 'nav-item' %>
      <%= link_to "View all media", works_path, :class => 'nav-item' %>
      <%= link_to "Add a new work", new_work_path, :class => 'nav-item' %>
      <%= link_to "View all users", users_path, :class => 'nav-item' %>
    </section>
    <section class="nav-submit-button">
      <% if @current_user %>
        <%= button_to "Logged in as #{@current_user.name}", user_path(id: @current_user.id), method: :get, :class => 'btn btn-primary'%>
        <%= button_to "Log Out", logout_path, method: :post, :class => 'btn btn-primary'%>
      <% else %>
        <%= button_to "Log In", login_path, method: :get, :class => 'btn btn-primary'%>
      <% end %>
    </section>
  </nav>
</header>