          <td><%= book.votes.length%></td>
          <td><%= link_to book.title, work_path(book) %></td>
          <td><%= book.creator %></td>
          <td><%= book.publication_year%></td>
          <td><a class="btn btn-primary" <%= link_to "Upvote", work_votes_path(book.id), method: :post %></a></td>
        </tr>
      <%end%>
      </tbody>
    </table>
  </section>

  <section class="media-table">
    <h4>Movies</h4>
