<% if @work.errors.any? %>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<section>
  <%= form_with model: @work do |f|  %>
    <div class="form-group">
      <%= f.label :category %>
      <%= f.select :category, options_for_select(Work.all.map(&:category).uniq) %>
    </div>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="form-group">
      <%= f.label :creator %>
      <%= f.text_field :creator %>
    </div>

    <div class="form-group">
      <%= f.label :publication_year %>
      <%= f.text_field :publication_year %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

    <div class="form-group">
      <%= f.submit action_name %>
    </div>
    <% end %>
</section>
