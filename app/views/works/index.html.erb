<h2>List of Works</h2>
<section class="media-table">
  <% ["album", "book", "movie"].each do |category| %>
    <h4><%= category %>s</h4>

    <% works_list = @works.where(category: category) %>
    <% if works_list.empty? %>
      <p>No <%= category %>s Available</p>
    <% else %>
      <table class="table">
        <thead>
          <tr>
            <th>Votes</th>
            <th>Title</th>
            <th>Created By</th>
            <th>Published</th>
            <th>Upvote</th>
          </tr>
        </thead>
        <tbody>
          <% works_list.each do |work| %>
            <tr>
              <td><%# votes %></td>
              <td><%= link_to "#{work.title}", work_path(work) %></td>
              <td><%= work.creator %></td>
              <td><%= work.publication_year %></td>
              <td><%= link_to "Upvote", work_votes_path(work), class: "btn btn-primary", method: :post%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  <% end %>
</section>