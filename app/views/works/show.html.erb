<main>
  <section>
    <h2>
      <%=@work.title%>
    </h2>
    <p>
      Created by: <%=@work.creator%>
    </p>
    <p>
      Published: <%=@work.publication_date%>
    </p>
    <p>
      <%= @work.description%>
    </p>
    <section>
      <%=link_to("Back to media ranks", root_path, class: "btn btn-primary")%>
      <%=link_to("Edit", edit_work_path(@work), class: "btn btn-primary")%>
      <%=link_to("Upvote", upvote_work_path, method: :post, class: "btn btn-primary")%>
      <%= link_to "Delete", work_path(@work), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger"%>
    </section>
    <section class="works-votes__container">
      <h3 class="works-votes__header"><%= @work.votes.count%> Votes for this Album</h3>
      <table class="table">
        <thead>
          <tr>
            <th>User</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <%@work.votes.each do |vote|%>
            <tr>
              <td><%=link_to(vote.user.name, user_path(vote.user))%></td>
              <td><%=vote.created_at.to_s(:short_date)%></td>
            </tr>
          <%end%>
        </tbody>
      </table>
    </section>
  </section>
</main>

