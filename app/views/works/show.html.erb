<section>
  <h2><%= @work.title %></h2>
  <p>Created by: <%= @work.creator %></p>
  <p>Published: <%= @work.publication_year %></p>
  <p><%= @work.description %></p>

  <section>
    <%= link_to "Back to media ranks", root_path, class: "btn btn-primary" %>
    <%= link_to "Edit", edit_work_path(@work), class: "btn btn-primary" %>
    <%= link_to "Upvote", work_upvote_path(@work), method: :post, class: "btn btn-primary" %>
    <%= link_to "Delete", work_path(@work), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?"} %>
  </section>
</section>

<section class="works-votes_container">
  <h3 class="works-votes__header"><%= @work.votes.count if @work.votes.count > 0 %> Votes for this Album</h3>
  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
    </thead>

    <tbody>
      <% if @work.votes.count > 0 %>
        <% @work.votes.each do |vote| %>
          <tr>
            <td><%= link_to vote.user.username, user_path(vote.user) %></td>
            <td><%= vote.created_at.strftime("%b %m, %Y") %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>

  </table>
</section>

