<h2>All Media</h2>

<h3>Albums</h3>
<table class="albums-table">
  <tr>
    <th>Title</th>
    <th>Creator</th>
    <th>publication_year</th>
  </tr>
  <% @albums.each do |album| %>
    <tr>
      <td><%= album.title %></td>
      <td><%= album.creator %></td>
      <td><%= album.publication_year %></td>
    </tr>
  <% end %>
</table>

