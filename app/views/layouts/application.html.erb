<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <ul>
          <li><%= link_to "View top media", root_path %></li>
          <li><%= link_to "View all media", works_path %></li>
          <li><%= link_to "Add a new work", new_work_path %></li>
          <li><%= link_to "View all users" %></li>
        </ul>
        <ul>
<!--          <li><%#= link_to "logged in as [insert name]" user_path(id) %></li>-->
          <% if session[:user_id] %>
            <li><%= link_to "Log Out", logout_path, class: "btn btn-primary", method: :post %></li>
          <% else %>
            <li><%= link_to "Log In", login_path, class: "btn btn-primary" %></li>
          <% end %>
        </ul>
      </nav>
    </header>

    <% if flash.any? %>
      <section class="alert__container">
        <% flash.each do |name, message| %>
          <div class="alert alert-success">
            <span><%= message %></span>
          </div>
        <% end %>
      </section>
    <% end %>

    <main>
      <%= yield %>
    </main>

  </body>
</html>
