<h2>List of Works</h2>
<section class= "Album">
  <h3>Albums</h3>
  <% albums = Work.where(media: "album") %>
  <% if @albums.size > 0 %>
    <table class= "table">
      <thead>
      <tr>
        <th> Votes: </th>
        <th> Title: </th>
        <th> Creator: </th>
        <th> Publication: </th>
        <th> Upvote: </th>
      </tr>
      </thead>
      <tbody>
      <% @albums.each do |album| %>
        <tr>
          <td><%= album.votes.length %></td>
          <td><%= link_to album.title, work_path(album) %></td>
          <td><%= album.created_by %></td>
          <td><%= album.published %></td>
          <td><%= button_to "Upvote", upvote_path(album.id), method: :post %></td>
        </tr>
        <% end %>
    <%else %>
    <%end %>
    </tbody>
  </table>
</section>

