<h2>New Work</h2>
<% if @work.errors.any? %>
  <span class="errors"><strong>Please check the errors below:</strong></span>
  <ul class="errors">
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<div class="new-work">
<%= form_with model: @work, class: 'create-work' do |f|%>
  <p>Please provide the following information to add a new media to our database:</p>

  <%= f.label :category %>
    <%= f.select :category, [['Album', :album],['Book', :book], ['Movie', :movie]]%>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :creator %>
  <%= f.text_field :creator %>
  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>
  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "Create Work", class: "Work-button" %>
<% end %>

</div>