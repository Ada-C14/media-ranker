<main>
  <section>
    <h2><%= @work.title %></h2>
    <p>Created by: <%= @work.creator %></p>
    <p>Published: <%= @work.publication_year %></p>
    <p><%= @work.description %></p>
    <section class="btn-group">
      <%= button_to "Back to media ranks", root_path, method: :get, :class => "btn btn-primary" %>
      <%= button_to "Edit", edit_work_path(@work), method: :get, :class => "btn btn-primary" %>
      <%= button_to "Upvote", upvote_path(@work), method: :post, :class => "btn btn-primary" %>
      <%= button_to "Delete", work_path(@work), method: :delete, :class => "btn btn-danger", data: {confirm: "Are you sure?"} %>
    </section>
  </section>
  <section class ="works-votes-container"><br><br>
    <h4 class="works-votes-container">This <%= @work.category %> has <%= @work.votes_count %> votes </h4>
    <table class="table">
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% @work.votes.each do |vote| %>
          <tr>
            <td><%= vote.user.name %></td>
            <td><%= Work.vote_date(vote) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
</main>