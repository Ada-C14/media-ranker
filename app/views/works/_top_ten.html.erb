<section class="top-ten__list-container">
  <h2 class="top-ten__header"> Top <%= category %></h2>
  <% works.sample(10).each do |work| %>
    <li class="list-group-item">
      <h4>
        <%= link_to work.title, work_path(work.id), method: :get %>
        <small class="top_ten__creator"> by <%= work.creator %></small>
        <!--    TODO this is id for now!-->
      </h4>
      <p><%= work.votes.size %> votes</p>
    </li>
  <% end %>
</section>