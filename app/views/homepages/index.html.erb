<h2>Welcome - Index Page </h2>

<h3>Top 10 Albums</h3>
<table id="index-table">
  <tr>
    <th>Title</th>
    <th>Creator</th>
    <th>Publication Year</th>
    <th>Description</th>
  </tr>

  <% @albums.each do |work| %>
      <tr>
        <td>
          <%= link_to "#{work.title}", work_path(work.id)%>
        </td>
        <td>
          <%= work.creator %>
        </td>
        <td>
          <%= work.publication_year %>
        </td>
        <td>
          <%= work.description %>
        </td>
      </tr>
  <%end %>
</table>

