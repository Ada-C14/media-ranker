<div class="container-content">

  <h1></h1>
  <div class="summary">
    <h2> Add a New Work </h2>
    <%= form_with model: @work do |f| %>

      <div>
        <%= f.label :category %>
        <%= f.select :category, [:album, :book, :movie] %>
      </div>
      <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div>
        <%= f.label :creator %>
        <%= f.text_field :creator %>
      </div>
      <div>
        <%= f.label :publication_date %>
        <%= f.text_field :publication_date %>
      </div>
      <div>
        <%= f.label :description %>
        <%= f.text_field :description %>
      </div>
      <%= f.submit "Add work" %>
    <% end %>

  </div>
</div>