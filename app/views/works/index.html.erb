<head>
  <title>Media Ranker 2.0</title>
</head>
<body>
<header class="app-header__header">
  <h1>
    <a href="index.html">Media Ranker</a>
    <small>Ranking the Best of Everything</small>
  </h1>
  <nav class="app-header__nav">
    <ul class="nav app-header__site-nav-container">
      <li class="nav-item app-header__nav_item">
        <%= link_to "View top media", root_path, class: "nav-link"%>
      </li>
      <li class="nav-item app-header__nav_item">
        <%= link_to "View all media", works_path, class: "nav-link"%>
      </li>
      <li class="nav-item app-header__nav_item">
        <%= link_to "Add a new work", new_work_path, class: "nav-link"%>
      </li>
      <li class="nav-item app-header__nav_item">
        <%= link_to "View all users", users_path_url, class: "nav-link"%>
      </li>
    </ul>
    <ul class="nav app-header__user-nav-container">
      <li class="nav-item app-header__nav_item">
        <a class="btn btn-primary" href="login.html">Log In</a>
      </li>
    </ul>
  </nav>
</header>

<main>
  <h2>List of Works</h2>
  <section class="media-table">
    <h4>Albums</h4>
    <table class="table">
        <thead>
        <tr>
          <th width=80>Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width=100>Published</th>
          <th width=100>Upvote</th>
        </tr>
        </thead>
        <tbody>
        <% @albums.each do |work| %>
        <tr>
          <td><%= work.votes.count %></td>
          <td><%= link_to work.title, work_path(work) %></td>
          <td><%= work.creator %></td>
          <td><%= work.publication_year%></td>
          <td>
            <%= link_to "Upvote", votes_path(work_id: work.id), class: "btn btn-primary", method: :post %>
          </td>
        <% end %>
        </tr>
        </tbody>
      </table>
      </section>
  <section class="media-table">
    <h4>Books</h4>
    <table class="table">
      <thead>
      <tr>
        <th width=80>Votes</th>
        <th>Title</th>
