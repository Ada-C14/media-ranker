<h2>List of Works</h2>
<table>
  <thead>
    <tr>
      <th>Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Upvote</th>
    </tr>
  </thead>
  <h3>Albums</h3>

  <tbody>
      <% @albums.each do |album| %>
        <tr>
          <td><%= album.votes.count %></td>
          <td><%= link_to album.title, work_path(album) %></td>
          <td><%= album.creator %></td>
          <td><%= album.publication_year %></td>
          <td><button><%= link_to "Upvote", upvote_work_path(album), method: :post %></button></td>
        </tr>
  <% end %>
  </tbody>
</table>

