<main>
  <section>
    <h2><%= @work.title %></h2>

    <ul>
      <li>Created by: <%= @work.creator %></li>
      <li>Published: <%= @work.publication_year %></li>
      <li>Description: <%= @work.description %></li>
    </ul>

    <%= link_to "Back to Media Ranks", root_path, class: "btn btn-primary" %>
    <%= link_to "Edit", edit_work_path(@work.id), class: "btn btn-primary" %>
    <%= link_to "Upvote", upvote_path(@work),
                method: :post, class: "btn btn-primary" %>
    <%= link_to "Delete", work_path(@work.id),
                method: :delete,
                data: { confirm: "Are you sure you want to delete this work?" },
                class: "btn btn-danger"%>
  </section>

  <section class="works-votes__container">
    <h3 class="works-votes__header"><%= @work.votes.count %> Votes for this <%= @work.category.capitalize %></h3>
    <table class="table">
      <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
      </thead>
      <tbody>
      <% @work.votes.each do |vote| %>
        <tr>
          <td><%= link_to vote.user.username, user_path(vote.user_id) %></td>
          <td><%= vote.created_at.strftime("%b %d, %Y") %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </section>
</main>

