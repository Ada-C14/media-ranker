<main>
  <section>
    <h2><%= @work.title %></h2>
    <p>Created by: <%= @work.creator %></p>
    <p>Published: <%= @work.publication_year %></p>
    <p><%= @work.description %></p>
    <section>
      <%= link_to "Back to media ranks", root_path, class: "btn-primary" %>
      <%= link_to "Edit", edit_work_path(@work), class: "btn-primary" %>
      <%= link_to "Upvote", upvote_path(@work), method: :post, class: "btn-primary" %>
      <%= link_to "Delete", work_path(@work), method: :delete, class: "btn-danger", data: {confirm: "Are you sure?"} %>
    </section>
  </section>

  <section class="works-votes__container">
    <h3 class="works-votes__header"><%= @work.votes.length %> Votes for this <%=@work.category %>></h3>
    <table class="table">
      <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
      </thead>
      <tbody>
        <tr>
          <% @work.votes.each do |vote| %>
            <td><%= link_to vote.user.username, user_path(vote.user) %></td>
            <td><%= vote.created_at.strftime("%m/%d/%Y") %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </section>
</main>