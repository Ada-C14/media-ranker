<h1>List of Works</h1>

<section class="table-border"> 
  <article>
    <h3>Albums</h3>
    <table class="list-table">
        <tr>
        <th>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Upvote</th>
        </tr>  
        <% @works.where(category: "album").each do |work|  %>
        <tr>
            <th>Vote#</th>
            <th><%= link_to work.title, work_path(work) %></th>
            <th><%= work.creator %></th>
            <th><%= work.publication_year %></th>
            <th>Upvote button</th>
        </tr>  
        <% end %>
    </table>  
  </article> 
