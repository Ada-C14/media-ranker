<body>
<main>
  <section class="spotlight">
    <h2 class="spotlight__header">
      <span class="spotlight__header--prefix">Media Spotlight</span>
      <% if @work %>
      <%= link_to @work.title, work_path(@work.id), class: "spotlight__link-to" %> by <%= @work.creator %>
        <%else %>
      <%= @spotlight_sample %>
        <% end %>
    </h2>
    <p class="spotlight__description">
      <%= @work.votes.count%> votes - <%= @work.description%>
    </p>
  </section>

  <hr class="root__hr" />

  <section class="top-ten__container">
    <section class="top-ten__list-container">
      <h2 class="top-ten__header">
        Top Movies
      </h2>
      <ul class="list-group top-ten__list">
        <% @movies.each do |work| %>
          <li class="list-group-item">
            <h4>
              <%= link_to work.title, work_path(work.id) %>
              <small class="top-ten__creator">by <%= work.creator %></small>
            </h4>
            <p><%= work.votes.count %></p>
          </li>
        <% end %>
      </ul>
      <!-- <a href="/works.movies">View More Movies</a> -->
    </section>

    <section class="top-ten__list-container">
      <h2 class="top-ten__header">
        Top Books
      </h2>
      <ul class="list-group top-ten__list">
        <% @books.each do |work| %>
          <li class="list-group-item">
            <h4>
              <%= link_to work.title, work_path(work.id) %>
              <small class="top-ten__creator">by <%= work.creator %></small>
            </h4>
            <p><%= work.votes.count %></p>
          </li>
        <% end %>
      <!-- <a href="/works.books">View More Books</a> -->
    </section>

    <section class="top-ten__list-container">
      <h2 class="top-ten__header">
        Top Albums
      </h2>
      <ul class="list-group top-ten__list">
        <% @albums.each do |work| %>
          <li class="list-group-item">
            <h4>
              <%= link_to work.title, work_path(work.id) %>
              <small class="top-ten__creator">by <%= work.creator %></small>
            </h4>
            <p><%= work.votes.count %></p>
          </li>
        <% end %>
      </ul>
      <!-- <a href="/works.albums">View More Albums</a> -->
    </section>

  </section>

</main>
</body>