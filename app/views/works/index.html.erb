          <td><%= work.publication_year%></td>
          <td>
            <%= link_to "Upvote", votes_path(work_id: work.id), class: "btn btn-primary", method: :post %>
          </td>
      <% end %>
      </tr>
      </tbody>
    </table>
  </section>
  <section class="media-table">
    <h4>Movies</h4>
    <table class="table">
      <thead>
      <tr>
        <th width=80>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th width=100>Published</th>
        <th width=100>Upvote</th>
      </tr>
      </thead>
      <tbody>
      <% @movies.each do |work| %>
        <tr>
          <td><%= work.votes.count %></td>
          <td><%= link_to work.title, work_path(work) %></td>
          <td><%= work.creator %></td>
          <td><%= work.publication_year%></td>
          <td>
            <%= link_to "Upvote", votes_path(work_id: work.id), class: "btn btn-primary", method: :post %>
          </td>
      <% end %>
      </tr>
      </tbody>
    </table>
  </section>
      <a class="btn btn-secondary" href="index.html">View top media</a>
      <a class="btn btn-primary" href="works/new.html">Add a new work</a>
      </main>
      </body>