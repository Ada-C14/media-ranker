<div>
<h1> <%= @work.title %> </h1>
<p> Created by: <%= @work.creator %> </p>
<p> Published: <%= @work.publication_year %> </p>
<p> <%= @work.description %> </p>
</div>

<%= button_to "Back to media ranks", root_path, method: :get %>
<%= button_to "Edit", edit_work_path, method: :get %>
<%= button_to "Upvote", upvote_path(@work.id)  %>
<%= button_to "Delete", work_path, method: :delete, data: { confirm: "Are you sure?" }  %>
