<h2>List of Works</h2>
<h4>Albums</h4>

<table class="table">
  <tr>
    <th width="80px">Votes</th>
    <th width="1400px">Title</th>
    <th>Created By</th>
    <th width="100px">Published</th>
    <th width="100px">Upvote</th>
  </tr>
  <tbody>
  <tr>
    <% @works.each do |work| %>
      <% if work.category == 'album' %>
        <td>Vote</td>
        <td><%= link_to work.title, work_path(work) %> </td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
        <td>VOTE</td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

