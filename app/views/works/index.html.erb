<h2>Works Index</h2>

<div>
  <table>
    <thead>
    <tr>
      <th>Votes</th>
      <th>Title</th>
      <th>Creator</th>
      <th>Published</th>
      <th>Upvote</th>
    </tr>
    </thead>
    <tbody>
    <% @works.each do |work|%>
      <tr>
        <td><%=rand(1..9) %></td>
        <td><strong><%=link_to work.title, work_path(work.id) %></strong></td>
        <td><%=work.creator %></td>
        <td><%=work.publication_year %></td>
        <td><%= button_to "Upvote", works_path, method: :get %></td>
      </tr>
    <%end %>
    </tbody>
  </table>
</div>




