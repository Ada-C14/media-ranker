<%= form_with model: @work, class: 'edit-driver' do |f| %>

  <p>Please provide the following information to edit your media in our database:</p>

  <%= f.label :category %>
  <%= f.select :category, [ 'album','book','movie' ], :prompt => 'Select One' %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "Edit Media", class: "media-button" %>
<% end %>