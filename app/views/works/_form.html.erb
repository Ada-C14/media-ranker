<%= form_with model: @work do |f|  %>
  <div class="form-group">
    <%= f.label :cateogry %>
      <%= f.select :category, ["album", "book", "movie"], class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :creator %>
    <%= f.text_field :creator %>
  </div>

  <div class="form-group">
    <%= f.label :publication_year %>
    <%= f.text_field :publication_year %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="form-group">
    <%= f.submit "#{action_name} Work", class: "btn btn-primary" %>
  </div>
<% end %>