<h2>List of Users</h2>

<nav>
  <ul>
    <li><%= link_to "Add a New Media", new_work_path%></li>
    <li><%= link_to "Return to Media List", works_path %></li>
    <% if session[:user_id] %>
      <li><%= link_to "Logout", logout_path, method: :post %></li>
    <%else %>
      <li><%=link_to "Log in", login_path %></li>
    <%end %>
  </ul>
</nav>

<table class="table">
  <thead>
  <tr>
    <th>Username</th>
    <th>Votes</th>
    <th>Joined</th>
  </tr>
  </thead>
  <% @users.each do |user| %>
    <tbody>
    <tr>
      <td><%= link_to user.username, user_path(user) %></td>
    </tr>
    </tbody>
  <%end %>
</table>

<%= button_to "See all Users", users_path, method: :get %>
<%= button_to "View all media", works_path, method: :get %>
