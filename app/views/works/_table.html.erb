<section>
  <h4><%= variable.first.category %>s</h4>
  <table >
    <thead>
    <tr>
      <th>Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Upvote</th>
    </tr>
    </thead>

    <tbody>
    <% variable.each do |work| %>
      <tr>
        <td><%= work.votes.count %></td>
        <td><%= link_to work.title, work_path(work), class: work.category %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
        <td><%= button_to "Upvote", work_votes_path(work), method: :post, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>