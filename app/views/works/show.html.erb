
<section>
  <h2>
    <%= @work.title %>
  </h2>
  <p>Created by: <%= @work.creator %></p>
  <p>Published: <%= @work.publication_year %></p>
  <section>
    <%= link_to "Back to media ranks", root_path, :class => "btn btn-primary" %>
    <%= link_to "Edit this #{@work.category.capitalize}", edit_work_path(@work.id), :class => "btn btn-primary" %>
    <%= link_to "Delete this #{@work.category.capitalize}", work_path(@work.id), method: :delete, data: {confirm: "Are you sure?"},:class => "btn btn-danger" %>
    <%= link_to "Upvote", work_upvote_path(@work.id), :class => "btn btn-primary"%>
  </section>
</section>
<section class="works-votes__container">
  <% unless @work.votes.nil? %>
    <h3 class="works-votes__header"><%= pluralize(@work.votes.size, "vote") %> for this <%= @work.category %></h3>
    <table class="table">
      <thead>
        <tr>
          <th>User</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% @work.votes.each do |vote| %>
          <tr>
            <td><%= link_to "#{vote.user.username}", users_path(id: vote.user.id) %></td>
            <td><%= vote.created_at.to_s %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</section>

