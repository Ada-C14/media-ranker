<% if @works.length > 0 %>
  <table>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Created By</th>
      <th>Published</th>
    </tr>
    <% @works.each do |work| %>
      <tr>
        <td><%= work.category %></td>
        <td><%= link_to work.title, work_path(work.id)%></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>No media in the system!</p>
<% end %>