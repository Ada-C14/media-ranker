<section class="media-table">
  <h4><%= variable.first.category.capitalize %>s</h4>
  <table >
    <thead>
    <tr>
      <th width=80>Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th width=100>Published</th>
      <th width=100>Upvote</th>
    </tr>
    </thead>

    <tbody>
    <% variable.each do |work| %>
      <tr>
        <td><%= work.votes.count %></td>
        <td><%= link_to work.title, work_path(work), class: work.category %></td>
        <td><%= work.creator %></td>
        <td><%= work.publication_year %></td>
        <td><%= button_to "Upvote", work_votes_path(work_id: work.id), method: :post, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>