<% if @users.count == 0 %>
  <h2>No users in database!</h2>
<% else %>
  <h2>List of Users</h2>
  <table class="table">

    <thead>
      <tr>
        <th>Username</th>
        <th>Votes</th>
        <th>Joined</th>
      </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user_path(user) %></td>
        <!--        <td><%#= user.votes %></td>-->
        <td><%= user.created_at %></td>
      </tr>
    <% end %>
    </tbody>

  </table>
<% end %>


