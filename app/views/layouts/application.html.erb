<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <h1><strong>Media Ranker</strong> | Rating the best of everything</h1>

    <%= link_to "Home", root_path, class: "link" %>
    <%= link_to "New Media", new_work_path, class: "link" %>
    <%= link_to "All Media", works_path, class: "link" %>
    <%= link_to "All Users", users_path, class: "link" %>
    <% if session[:user_id].nil? %>
      <%= link_to "Login", login_path, class: "link" %>
    <% else %>
<!--      <p>Logged in as <%#= @current_user.username %></p>-->
      <%= link_to "Logout", logout_path, method: :post, class: "link" %>
    <% end %>
  </header>

  <section class="flash-message">
    <% flash.each do |name, message| %>
      <strong class="<%= name %>">
        <%= message %>
      </strong>
    <% end %>
  </section>

  <body>
    <%= yield %>
  </body>

</html>
