<html>
  <head>
    <title>Media Ranker 2.0</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


    <title>Media Ranker 2.0</title>
    <meta name="csrf-param" content="authenticity_token" />
    <meta name="csrf-token" content="g/IG+zr6hOZUyLT2WSlta4IkW4x52f/ToX4sCOQoAcMkAOxXkcDtpKq78siJzgeKKjKOoynokucNLbumqfkerg==" />

    <link rel="stylesheet" media="screen" href="/assets/application-23e0d10ed2d885fab99a6549bc004eca19f49cf694e045afebe16b6e9bf1345a.css" />
    <link rel="stylesheet" media="screen" href="https://fonts.googleapis.com/css?family=Gudea:400,700|Hammersmith+One" />
    <link rel="stylesheet" media="all" href="/assets/application-23e0d10ed2d885fab99a6549bc004eca19f49cf694e045afebe16b6e9bf1345a.css" data-turbolinks-track="reload" />
    <script src="/assets/application-f29d14b755d80577972d103e106ff1c2bc9a53efbc3b1e775d62d596da7222db.js" data-turbolinks-track="reload"></script>
    <link rel="shortcut icon" type="image/x-icon" href="/assets/favicon-910822ff6cd5f6d37119171c4b716f1d4e5fe0e8ad5e408627659ebf8d7f16b1.ico" />
  </head>

  <body>
  <header class="app-header__header">
    <h1>
      <%= link_to "Media Ranker", root_path, method: :get %>
      <small>Ranking the Best of Everything</small>
    </h1>
    <nav class="app-header__nav">
      <ul class="nav app-header__site-nav-container">
        <li class="nav-item app-header__nav_item">
          <%= link_to "View top media", root_path, method: :get, class: "nav-link" %>
        </li>
        <li class="nav-item app-header__nav_item">
          <%= link_to "View all media", works_path, method: :get, class: "nav-link" %>
        </li>
        <li class="nav-item app-header__nav_item">
          <%= link_to "Add a new work", new_work_path, method: :get, class: "nav-link" %>
        </li>
        <li class="nav-item app-header__nav_item">
          <a class="nav-link" href="/users">View all users</a>
        </li>
      </ul>
      <ul class="nav app-header__user-nav-container">

        <li class="nav-item app-header__nav_item">
          <a class="btn btn-primary" href="/users/913">Logged in as hoot</a>
        </li>
        <li class="nav-item app-header__nav_item">
          <a class="btn btn-primary" rel="nofollow" data-method="post" href="/logout">Log Out</a>
        </li>


      </ul>
    </nav>
  </header>
  <section class="alert__container">
    <% flash.each do |name, message| %>
        <span class="<%= name %>">
          <%= message %>
        </span>
      <% if action_name.downcase != 'destroy' %>
        <% if !@work.nil? %>
          <ul class="errors">
            <% @work.errors.each do |column, message| %>
              <li>
                <%= column %>: <%= message %>
              </li>
            <% end %>
          </ul>
        <% end %>
      <% end %>
    <% end %>
  </section>
    <%= yield %>
  </body>
</html>
