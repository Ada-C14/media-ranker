<h2>List of Works</h2>
  <nav>
    <%= button_to "Homepage", root_path, method: :get %>
    <%= button_to "Add a New Media", new_work_path, method: :get %>
    <% if session[:user_id] %>
      <%= button_to "Logout", logout_path, method: :post %>
    <%else %>
      <%=button_to "Log in", login_path, method: :get %>
    <%end %>
  </nav>

<section class= "Album">
  <h3>Album Media:</h3>
  <% albums = Work.where(media: "album") %>
  <% if @albums.size > 0 %>
    <table class= "table">
      <thead>
      <tr>
        <th> Title: </th>
        <th> Creator: </th>
        <th> Publication: </th>
      </tr>
      </thead>
      <tbody>
      <% @albums.each do |album| %>
        <tr>
          <td><%= link_to album.title, work_path(album) %></td>
          <td><%= album.created_by %></td>
          <td><%= album.published %></td>
        </tr>
        <% end %>
    <%else %>
    <%end %>
    </tbody>
  </table>
</section>

