      <thead>
      <tr>
        <th width="80">Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th width="100">Published</th>
        <th width="100">Upvote</th>
      </tr>
      </thead>
      <tbody>
      <% @ordered_movies = @movies.sort_by {|movie| movie.votes.length} %>
