<section class="alert__container">
  <br>
  <% if flash[:warning] && flash[:messages] %>
    <div class="alert alert-warning">
      <span>A problem occurred: Could not upvote</span>
      <ul>
        <% flash[:messages].each do |name, problems| %>
          <% problems.each do |problem| %>
            <li><%= name %>: <%= problem %></li>
          <% end %>
        <% end %>
      </ul>
    </div>

  <% elsif flash[:warning] %>
    <% flash.each do |name, message| %>
      <div class="alert alert-warning">
        <li><%= message %></li>
      </div>
    <% end %>
  <% end %>
</section>


<main>
<h2><%= @work.title %></h2>
  <p>Created By: <%= @work.creator %></p>
  <p>Published: <%= @work.publication_year %></p>
  <p><%= @work.description %></p>

  <%= link_to "Back to media ranks", root_path, class: "btn btn-primary" %>
  <%= link_to "Edit", edit_work_path(@work), class: "btn btn-primary" %>
 <%= link_to "Upvote", upvote_path(@work), method: :post, class: "btn btn-primary" %>
  <%= link_to "Delete", work_path(@work), class: "btn btn-danger", method: "delete", data: { confirm: "Are you sure?" } %>
<br><br>
 <h3 class = "works-votes__header"><%= @work.votes_count.nil? ? "0" : @work.votes_count %> Votes for this <%= @work.category %></h3>
 <table>
   <thead>
   <tr>
     <th>User</th>
     <th>Date</th>
   </tr>
   </thead>
   <tbody>
   <% @work.votes.each do |vote| %>
     <tr>
       <td><%= link_to vote.user.username, user_path(vote.user) %></td>
       <td><%= vote.created_at %></td>
     </tr>
   <% end %>
   </tbody>
 </table>
</main>