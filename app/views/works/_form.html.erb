<%= form_with model: @work, class: 'create-work' do |f| %>
  <p>Please provide the following information to add new Media:</p>
<div>
  <%= f.label :media %>
  <%= f.select :media, [ ["album"], ["movie"], ["book"] ] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :created_by %>
  <%= f.text_field :created_by %>

  <%= f.label :published %>
  <%= f.text_field :published %>

  <%= f.label :description %>
  <%= f.text_field :description %>
</div>

  <%= f.submit "#{action_name}", class: "work-button" %>
<% end %>