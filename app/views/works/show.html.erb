<h3><%= @work.title %></h3>
<strong><%= "A #{@work.category.capitalize} by #{@work.creator}" %></strong>
<p><%= "Published #{@work.published}" %></p>
<p><%= @work.description %></p>

<h4><%= @work.votes.count %> Votes</h4>
<table class="table">
  <thead>
  <tr>
    <th>User</th>
    <th>Date</th>
  </tr>
  </thead>

  <tbody>
  <% @work.votes.each do |vote| %>
    <tr>
      <td><%= link_to vote.user.username, user_path(vote.user_id) %></td>
      <td><%= vote.created_at.to_date %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= button_to "Upvote", upvote_path(@work.id) %>
<%= button_to "Edit", edit_work_path, method: :get %>
<%= button_to "Delete", work_path, method: :delete, data: {confirm: "Are you sure you want to delete this #{@work.category}?" }%>