<main>
  <section class="spotlight">
    <% if Work.spotlight.nil? %>
      <h2>No media spotlight. Go vote!</h2>
    <% else %>
      <h2><span class="spotlight__header--prefix">Media Spotlight: </span>
        <%= link_to Work.spotlight.title,
                    work_path(Work.spotlight),
                    class: "spotlight__link-to" %>
        by <%= Work.spotlight.creator %>
      </h2>
      <p class="spotlight__description"><%= Work.spotlight.votes.count %> votes - <%= Work.spotlight.description %></p>
    <% end %>
  </section>

  <section class="top-ten__container">
    <% ["movie", "book", "album"].each do |category| %>
    <section class="top-ten__list-container">
      <h2 class="top-ten__header">Top <%= category.capitalize << "s" %></h2>
      <ul class="list-group top-ten__list">
        <% Work.top_10(category).each do |medium| %>
          <li class="list-group-item">
            <h4><%= link_to medium.title, work_path(medium) %>
              <small class="top-ten__creator">by <%= medium.creator %></small></h4>
            <p><%= medium.votes.count %> votes</p>
          </li>
        <% end %>
      </ul>
    </section>
    <% end %>
  </section>

</main>

