<section class = "main-content">
  <h2 class="main-content-header">List of Users</h2>
  <% if @users.size == 0 %>
    <p><%= "No users yet!" %></p>
  <% else %>
    <table class="table table-sm">
      <thead>
      <tr class="d-flex">
        <th class="col-6">Username</th>
        <th class="col-3">Votes</th>
        <th class="col-3">Joined</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr class="d-flex">
          <td class="col-6"><%= link_to user.name, user_path(user.id), class: "text-info" %></td>
          <td class="col-3"><%= user.votes.size %></td>
          <td class="col-3"><%= user.created_at.to_date.strftime("%b %d, %Y") %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% end %>

  <section class= "mt-5 d-flex justify-content-center">
    <%= link_to "Back to Top 10 (Home)", root_path, class: "btn btn-info m-2", role: "button" %>
  </section>

</section>