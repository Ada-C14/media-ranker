<section>
  <%= form_with model: @user do |f| %>
    <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.submit action_name, class: "btn btn-primary" %>
    </div>
  <% end %>
</section>