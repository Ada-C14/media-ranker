<main>
  <h2>User Summary: <%= link_to @user.username, user_path(@user)  %></h2>
  <p>Joined site <%= @user.created_at.strftime("%Y-%m-%d") %></p>

  <section class="user-votes__container">
    <h3 class="user-votes__header">Votes</h3>
    <table class="table">
      <thead>
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
      </tr>
      </thead>

      <tbody>
      <% @user.votes.each do |vote| %>
        <tr>
          <% work = Work.find_by(id: vote.work_id) %>
          <td><%= link_to work.title, work_path(work), method: :get, :class => work.category %></td>
          <td><%= work.creator %></td>
          <td><%= work.publication_year %></td>
          <td><%=  work.category %></td>
          <td><%=  vote.created_at.strftime("%B-%D-%Y") %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </section>

  <button><%= link_to "See all Users", users_path %></button>
  <button><%= link_to "Back to Media List", root_path %></button>
</main>





