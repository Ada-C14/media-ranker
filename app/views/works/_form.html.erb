<% if @work.errors.any? %>
  <section class="error_alert">
    <p>A problem occurred: Could not <%= update @work.category %> </p>
    <ul>
      <% @work.errors.each do |column, message| %>
        <li>
          <%= column %>: <%= message %>
        </li>
      <% end %>
    </ul>
  </section>
<% end %>

<%= form_with model: @work, class: "work-input" do |f| %>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category, Work::CATEGORIES %>
  </div>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :creator %>
    <%= f.text_field :creator, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :publication_year %>
    <%= f.text_field :publication_year, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <%= f.submit "#{action_name} Work", class: "btn btn-primary"%>
<% end %>
