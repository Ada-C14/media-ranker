<main>
  <section>
    <h2><%= @work.title %></h2>
    <p>Created by: <%= @work.creator %></p>
    <p>Published: <%= @work.publication_year %></p>
    <p><%= @work.description %></p>

  <section>
    <button class="btn btn-primary"><%= link_to "Back to media ranks", root_path %></button>
    <button class="btn btn-primary"><%= link_to "Edit", edit_work_path %></button>
    <button class="btn btn-primary"><%= link_to "Upvote", upvote_work_path, method: :post %></button>
    <button class="btn btn-danger"><%= link_to "Delete", work_path(@work.id), method: :delete, data: {confirm: "Are you sure?"} %></button>
  </section>
  </section>

  <section class="works-votes__container">
    <h3 class="works-votes__header"><%= @work.votes.count %> Votes for this <%= @work.category.capitalize %></h3>
    <table class="table">
      <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
      </thead>
      <tbody>
      <% @work.users.each do |user| %>
        <tr>
          <td><%= link_to user.username, user_path(user) %></td>
          <td><%= @work.vote_date %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </section>
</main>