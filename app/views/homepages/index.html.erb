        <h4>
          <%= link_to album.title, work_path(album) %>
          <small><%= "By: #{album.creator}" %></small>
        </h4>
        <p><%= "#{rand(0..50)} votes" %></p>
      </li>
    <% end %>
  </ul>
</section>
