<section>
  <%= form_with model: @work do |f| %>
    <div class="form-group">
      <%= f.select :category, categories.map{|category| category.capitalize}%>
    </div>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label :creator %>
      <%= f.text_field :creator %>
    </div>
    <div class="form-group">
      <%= f.label :publication_date %>
      <%= f.text_area :publication_date %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div class="form-group">
      <%= f.submit "#{action_name} Work", class: "btn btn-primary" %>
    </div>
  <% end %>
</section>

