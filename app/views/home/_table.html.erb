<h3><strong><%=name %></strong></h3>

<div>
  <table class="table">
    <thead>
      <tr>
        <th>Vote(s)</th>
        <th>Title</th>
        <th>Creator</th>
        <th>Published</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% media.each do |work| %>
        <tr>
          <td><%=work.votes.count %></td>
          <td><strong><%=link_to work.title, work_path(work.id)%></strong></td>
          <td><%=work.creator %></td>
          <td><%=work.publication_year %></td>
          <td><%=work.description %></td>
        </tr>
      <%end %>
    </tbody>
  </table>
</div>