<main>
<h2>User Summary: <%= @user.username %></h2>
<p>Joined site <%= @user.created_at.strftime("%B %d, %Y") %></p>
  <h3 class="user-votes__header">Votes</h3>
  <section class="user-votes__container">
<table class="table">
  <thead>
  <tr>
    <th>Media Title</th>
    <th>Created By</th>
    <th>Published</th>
    <th>Category</th>
    <th>Voted On</th>
  </tr>
  </thead>
  <tbody>
  <% @user.works.each do |work| %>
    <tr>
      <td><%= link_to work.title, work_path(work) %></td>
      <td><%= work.creator %></td>
      <td><%= work.publication_year %></td>
      <td><%= work.category.capitalize %></td>
      <td><%= work.created_at.strftime("%b %d, %Y") %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</section>
  <button class="btn btn-secondary"><%= link_to "See all Users", users_path %></button>
  <button class="btn btn-primary"><%= link_to "Back to Media List", root_path %></button>
</main>


