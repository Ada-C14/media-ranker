<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <h1>Ride Share</h1>
    <nav>
      <%= link_to "Home", root_path %>
      <%= link_to "View Works", works_path %>
      <%= link_to "Add Work", new_work_path %>
    </nav>
  </header>
  <body>
    <section class="flash-msg__section">
      <% flash.each do |name, message| %>
        <strong class="<%= name %>">
          <%= message %>
        </strong>
      <% end %>
    </section>

    <%= yield %>
  </body>
</html>


<footer>
  Copyright Alice D 2020
</footer>

</html>
