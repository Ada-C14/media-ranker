<section>
  <section>
    <h2><%= @work.title %></h2>
    <p>Created By: <%= @work.creator %></p>
    <p>Published: <%= @work.publication_year %></p>
    <p>Description: <%= @work.description %></p>
  </section>

  <section>
    <%= link_to "Back to media ranks", root_path, method: :get, class: "btn btn-primary"%>
    <%= link_to "Edit", edit_work_path, method: :get, class: "btn btn-primary"%>
    <%= link_to "Upvote", work_votes_path(@work), method: :post, class: "btn btn-primary"%>
    <%= link_to "Delete", work_path(@work), method: :delete, class: "btn btn-primary",  data: {confirm: "Are you sure you want to delete"}, form: {style: 'display:inline-block;' }%>
  </section>

</section>

<section class="media-table">
  <h3 class="works-votes__header"><%= "#{@work.votes.count} Votes for this #{@work.category.capitalize}" %></h3>
  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
      </tr>
    </thead>

    <tbody>
      <% @work.votes.each do |vote| %>
        <tr>
          <td><%= link_to User.find_by(id: vote.user_id).username, user_path(User.find_by(id: vote.user_id)), method: :get, :class => "user" %></td>
          <td><%= vote.created_at.strftime('%B %D, %Y') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>

