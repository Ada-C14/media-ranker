
<main>
  <h2>List of Works!</h2>

  <section class="media-table">
    <h4>ALBUMS</h4>
      <table class="table">
        <tr>
          <th>Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th>Published</th>
          <th>Upvote</th>
        </tr>
        <% @albums.each do |work| %>
            <tr>
              <td> "vote_count" </td>
              <td><%= link_to work.title, works_path(work.id) %></td>
              <td><%= work.creator %></td>
              <td><%= work.publication_year %></td>
              <td><%= button_to "Upvote/brokenLink", works_path(work.id), class: "btn btn-primary" %></td>
            </tr>
        <% end %>
      </table>
  </section>

