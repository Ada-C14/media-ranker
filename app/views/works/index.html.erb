<h2>All Work - Index Page </h2>

<section>
  <% hash = {"album" => "All Albums", "book" => "All Books", "movie" => "All Movies"} %>
  <% ["album", "book", "movie"].each do |category| %>
    <% works = Work.category_organized(category) %>
    <h3><%= hash[category] %></h3>
    <table id="index-table">
      <tr>
        <th>Title</th>
        <th>Vote Count</th>
        <th>Creator</th>
        <th>Publication Year</th>
        <th>Description</th>
      </tr>
      <% works.each do |work| %>
        <tr>
          <td><%= link_to "#{work.title}", work_path(work.id)%></td>
          <td><%= work.votes_count %></td>
          <td><%= work.creator %></td>
          <td><%= work.publication_year %></td>
          <td><%= work.description %></td>
        </tr>
      <%end %>
    </table>
  <% end %>
</section>

<p><%= link_to "Add Work", new_work_path %></p>