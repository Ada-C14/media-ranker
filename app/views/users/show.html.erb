<h2>User: <%= @user.username%></h2>

<table>
  <tr>
    <th>Vote ID</th>
    <th>Work ID</th>
    <th>Work Category</th>
    <th>Work Title</th>

    <% vote_count_by_user = 0 %>

  </tr>
  <% @user.votes.each do |vote| %>

    <tr>
      <td>
        <%= vote.id %>
      </td>
      <td>
        <%= vote.work_id %>
      </td>
      <td>
        <%= vote.work.category %>
      </td>
      <td>
        <%= vote.work.title %>
      </td>
    </tr>
    <% vote_count_by_user += 1 %>
  <%end %>

</table>
<p>Total Number of Votes by <%= @user.username %>: <%=vote_count_by_user %></p>
