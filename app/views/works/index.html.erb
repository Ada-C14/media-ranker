<div class="scroll-top"></div>

<main>
  <h2>List of Works</h2>

  <section class="media-table">
    <h4>Albums</h4>
    <table class="table">
      <thead>
      <tr>
        <th width=80>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th width=100>Published</th>
        <th width=100>Upvote</th>
      </tr>
      </thead>
      <tbody>
      <% @albums.each do |work| %>
        <tr>
          <td><%= work.votes.count%></td>
          <td><%= link_to work.title, work_path(work), class: 'table-link' %></td>
          <td><%= link_to work.creator, work_path(work), class: 'table-link' %></td>
          <td class="table-content"><%= work.publication_year %> </td>
          <td><%= link_to "Upvote", work_votes_path(work), method: :post, class: "btn btn-primary" %></td>
        </tr>
      <% end %>
     </tbody>
    </table>
  </section>

  <section class="media-table">
    <h4>Books</h4>
    <table class="table">
      <thead>
      <tr>
        <th width=80>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th width=100>Published</th>
        <th width=100>Upvote</th>
      </tr>
      </thead>
      <tbody>
      <% @books.each do |work| %>
        <tr>
          <td><%= work.votes.count%></td>
          <td><%= link_to work.title, work_path(work), class: 'table-link' %></td>
          <td><%= link_to work.creator, work_path(work), class: 'table-link' %></td>
          <td class="table-content"><%= work.publication_year %> </td>
          <td><%= link_to "Upvote", work_votes_path(work), method: :post, class: "btn btn-primary" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </section>

  <section class="media-table">
    <h4>Movies</h4>
    <table class="table">
      <thead>
      <tr>
        <th width=80>Votes</th>
        <th>Title</th>
        <th>Created By</th>
        <th width=100>Published</th>
        <th width=100>Upvote</th>
      </tr>
      </thead>
      <tbody>
      <% @movies.each do |work| %>
        <tr>
          <td><%= work.votes.count%></td>
          <td><%= link_to work.title, work_path(work), class: 'table-link' %></td>
          <td><%= link_to work.creator, work_path(work), class: 'table-link' %></td>
          <td class="table-content"><%= work.publication_year %> </td>
          <td><a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/790/upvote">Upvote</a></td>
          <td><%= link_to "Upvote", work_votes_path(work), method: :post, class: "btn btn-primary" %></td>

        </tr>
      <% end %>
      </tbody>
    </table>
  </section>

</main>
