<main>
  <h2>User Summary: <%= @user.username %></h2>
  <p>Joined site <%= @user.created_at.strftime("%B %-d, %Y") %></p>
  <section class="votes">
    <h3 class="votes-header">Votes</h3>
    <table>
      <thead>
      <th>Media Title</th>
      <th>Created By</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted On</th>
      </thead>
      <tbody>
        <% @user.works.each do |work| %>
          <tr>
            <td><%= link_to work.title, work_path(work.id) %></td>
            <td><%= work.creator %></td>
            <td><%= work.publication_year %></td>
            <td><%= work.category.capitalize %></td>
            <td><%= Vote.find_by(work_id: work.id).created_at.strftime("%b %-d, %Y") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>
  <%= link_to "See all Users", users_path, class: "button btn-secondary" %>
  <%= link_to "Back to Media List", works_path, class: "button" %>
</main>