<h2>User Summary: <%=@user.name %></h2>
<p>Joined site <%= @user.created_at.strftime("%b %d, %Y") %></p>
<section>
  <h3>Votes</h3>
  <table id='votes-table' class="table table-hover">
    <thead class="thead-light">
    <tr>
      <th>Media Title</th>
      <th>Created by</th>
      <th>Published</th>
      <th>Category</th>
      <th>Voted on</th>
    </tr>
    </thead>

    <tbody>
    <% @user.votes.each do |user| %>
      <tr>
        <td><%= link_to user.work.title, work_path(user.work.id)%></td>
        <td><%= user.work.creator%></td>
        <td><%= user.work.publication_date%></td>
        <td><%= user.work.category%></td>
        <td><%= user.work.created_at.strftime("%b %d, %Y") %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>

<a href="<%=users_path %>"><button type="button" class="btn btn-info">See all Users</button></a>
<a href="<%=root_path %>"><button type="button" class="btn btn-info">Back to Media List</button></a>

