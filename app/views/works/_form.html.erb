
<section>
  <%= form_with model: @work do |f| %>
    <div class="form-group">
      <%= f.label :category %>
      <%= f.select :category, ['album', 'book', 'movie'] %>
    </div>

    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="form-group">
      <%= f.label :creator %>
      <%= f.text_field :creator %>
    </div>

    <div class="form-group">
      <%= f.label :publication_year %>
      <%= f.text_field :publication_year %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

    <%= f.submit "#{action_name} Work", class: "btn-primary" %>
  <% end %>
</section>