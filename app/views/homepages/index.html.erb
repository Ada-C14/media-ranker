<h1><b>Media Spotlight: </b><% sample = @works.sample %>
  <%= link_to sample.title, work_path(sample)%>  by <%= sample.creator %> </h1>
<p> <%=sample.description %> </p>
<div class="row">
  <div class="column"><h2>Top movies </h2>
    <%#  @works.each do |work| %>
      <%# if work.category == "movie" %>
    <% sample_ten = @works.where(category: "movie").sample(10) %>
    <% sample_ten.each do |work| %>
    <b><%= link_to work.title, work_path(work) %></b>  by <%= work.creator%><br>
    <% end %>

  </div>
  <div class="column"> <h2>Top Books</h2>
   <%  sample_ten = @works.where(category: "book").sample(10) %>
    <% sample_ten.each do |work| %>
        <b><%= link_to work.title, work_path(work) %></b>  by <%= work.creator%><br>
      <%end %>

  </div>
  <div class="column"><h2>Top Albums</h2>
    <% sample_ten = @works.where(category: "album").sample(10)  %>
    <% sample_ten.each do |work| %>
        <b><%= link_to work.title, work_path(work) %></b>  by <%= work.creator%><br>
    <% end %>

  </div>
</div>


