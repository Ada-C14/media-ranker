<section class="spotlight">
  <h2><span>Media Spotlight</span>
    <% first_work = @works.first %>
    <%= link_to first_work.title, work_path(first_work.id), method: :get %>
    by <%= first_work.creator %>
  </h2>
</section>

<section class="top-ten__container">
  <section class="top-ten__list-container">
    <h2>Top Movies</h2>

        <% if @sample_albums.empty? %>
          <p>No albums available</p>
          <%else %>
    <ul>
          <% @sample_albums.each do |movie| %>
            <li>
              <%= link_to movie.title, work_path(movie.id), method: :get %> by <%= movie.creator %>
              <p>#votes</p>
            </li>

          <%end %>
    </ul>
        <% end %>

  </section>

  <section>
    <h2>Top Books</h2>
    <ul>
      <% unless @sample_books.empty? %>
        <% @sample_books.each do |book| %>
          <li>
            <%= link_to book.title, work_path(book.id), method: :get %> by <%= book.creator %>
            <p>#votes</p>
          </li>
        <%end %>
      <% end %>
    </ul>
  </section>

  <section>
    <h2>Top Albums</h2>
    <ul>
      <% unless @sample_albums.empty? %>
        <% @albums.sample(10).each do |album| %>
          <li>
            <%= link_to album.title, work_path(album.id), method: :get %> by <%= album.creator %>
            <p>#votes</p>
          </li>
        <%end %>
      <% end %>
    </ul>
  </section>
</section>
