<%= form_with model: @work, class: 'create-work' do |f| %>
  <p>Please provide the following information to add new Media:</p>


<section>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :media, [ ["album"], ["movie"], ["book"] ] %>
  </div>

  <div class="form-group">
    <%= f.label :title %> <%= f.text_field :title, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :created_by %>
    <%= f.text_field :created_by, class: "form-control"%>
  </div>

  <div class = "form-group">
    <%= f.label :published %>
    <%= f.text_field :published, class: "form-control" %>
  </div>
  <div class = "form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control" %>
  </div>

</section>

  <%= f.submit "#{action_name}", class: "work-button" %>
<% end %>