<h2>All Work - Index Page </h2>

<h3>Albums</h3>
<table id="index-table">
  <tr>
    <th>Title</th>
    <th>Creator</th>
    <th>Publication Year</th>
    <th>Description</th>

  </tr>
  <% @works.each do |work| %>
    <% if work.category == "album" %>
      <tr>
        <td>
          <%= work.title %>
        </td>
        <td>
          <%= work.creator %>
        </td>
        <td>
          <%= work.publication_year %>
        </td>
        <td>
          <%= work.description %>
        </td>
      </tr>
    <% end %>
  <%end %>
</table>

