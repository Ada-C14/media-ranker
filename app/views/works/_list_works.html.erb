

<section class="media-table">
  <h4>Books</h4>
  <table class="table">

    <thead>
    <tr>
      <th width="80">Votes</th>
      <th>Title</th>
      <th>Created By</th>
      <th width="100">Published</th>
      <th width="100">Upvote</th>
    </tr>
    </thead>

    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.votes.count %></td>
        <td><%= link_to book.title, work_path(book.id) %></td>
        <td><%= book.creator %></td>
        <td><%= book.publication_date %></td>
        <td class="button button-primary"><%= button_to 'Upvote', new_vote_path,  %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>