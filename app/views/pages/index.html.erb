<section class="spotlight">
  <h2 class="spotlight__header">
    Media Spotlight
    <%= link_to "#{Work.spotlight.title}", work_path(Work.spotlight)%>
    <%= "by #{Work.spotlight.creator}" %>
  </h2>
<!--  <%#= Work.spotlight.votes.count %><p>votes, </p><%#= Work.spotlight.description %>-->

</section>

<hr>

<section class="top-ten__container">

